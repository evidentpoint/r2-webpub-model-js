{
  "name": "r2-webpub-model-js",
  "version": "1.0.0-alpha.1",
  "description": "Readium Web Publication Model for JS (TypeScript)",
  "keywords": [
    "readium",
    "readium2",
    "publication",
    "webpub",
    "manifest",
    "epub",
    "model",
    "parser"
  ],
  "main": "dist/r2-webpub-model-js.umd.js",
  "module": "lib/r2-webpub-model-js.js",
  "typings": "lib/types/r2-webpub-model-js.d.ts",
  "files": [
    "lib"
  ],
  "author": {
    "name": "Readium Foundation",
    "organization": "Readium Foundation",
    "url": "http://github.com/readium/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --config .prettierrc --write 'src/**/*.ts' 'test/**/*.ts' ",
    "prebuild": "rimraf lib",
    "build": "run-s build:*",
    "build:tsc": "tsc",
    "build:rollup": "rollup -c rollup.config.js",
    "prestart": "rimraf lib",
    "start": "run-p start:*",
    "start:tsc": "npm run build:tsc -- -w",
    "start:rollup": "npm run build:rollup -- -w",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:debug": "ndb npm run test",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "dependencies": {
    "ta-json-x": "^2.5.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.1",
    "colors": "^1.3.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lodash.camelcase": "^4.3.0",
    "ndb": "^1.0.26",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1",
    "prompt": "^1.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.4"
  }
}
